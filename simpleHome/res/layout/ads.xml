<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/apps"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
<RelativeLayout 
	android:id="@+id/base"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<RelativeLayout android:id="@+id/shortcut_bar"
  		android:background="@drawable/shortcut_bar_layout_revert"
  		android:orientation="horizontal"
  		android:layout_alignParentBottom="true"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		
		<ImageView android:id="@+id/shortcut_sms"
			android:layout_height="35dip" 
			android:layout_width="35dip"
			android:layout_alignParentLeft="true"
			android:scaleType="fitCenter"
			android:paddingLeft="5dip"
  		/>
		<ImageView android:id="@+id/shortcut_phone"
			android:layout_height="35dip" 
			android:layout_width="35dip"
			android:layout_centerHorizontal="true"
			android:scaleType="fitCenter"
  		/>
		<ImageView android:id="@+id/shortcut_contact"
			android:layout_height="35dip" 
			android:layout_width="35dip"
			android:layout_alignParentRight="true"
			android:scaleType="fitCenter"
  		/>
  		<TextView android:id="@+id/home_bar"
  			android:layout_width="80dip"
  			android:layout_height="wrap_content"
  			android:layout_centerInParent="true"
  			android:text="@string/more"
  			android:textSize="16dip"
  			android:gravity="center"
  			android:layout_marginLeft="8dip"
  			android:layout_toRightOf="@id/shortcut_sms"/>
  		<TextView android:id="@+id/business_bar"
  			android:layout_width="80dip"
  			android:layout_height="wrap_content"
  			android:layout_centerInParent="true"
  			android:text="@string/favoriteapps"
  			android:textSize="16dip"
  			android:gravity="center"
  			android:layout_marginRight="8dip"
  			android:layout_toLeftOf="@id/shortcut_contact"/>
	</RelativeLayout>
	
	<GridView android:id="@+id/favos"
		android:layout_above="@id/shortcut_bar"
		android:stackFromBottom="true"
		android:verticalSpacing="10dip"
		android:horizontalSpacing="10dip"
		android:paddingBottom="15dip"
		android:columnWidth="55dip"
		android:numColumns="auto_fit"
		android:background="@android:color/transparent"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
		
	<ListView android:id="@+id/business"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10dip"
		android:layout_marginBottom="10dip"
		android:layout_above="@id/shortcut_bar"
		android:background="#AA222222"
		android:layout_width="200dip"
		android:layout_height="wrap_content"
		android:scrollingCache="false"
		android:fadingEdge="none"/>
	 
</RelativeLayout>
	
<RelativeLayout 
    android:id="@+id/adsParent"
    android:visibility="invisible"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <com.google.ads.AdView xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"  
    android:id="@+id/adView"        
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    ads:loadAdOnCreate="true"
    ads:adUnitId="a14e79197567476"
    ads:adSize="BANNER"/>
    
	<View android:id="@+id/white_bar"
		android:layout_height="6dip" 
		android:layout_width="fill_parent"
		android:layout_below="@id/adView"
		android:background ="#FFEEEEEE" /> 
    
	<LinearLayout android:id="@+id/buttons"
  		android:background="#FFEEEEEE"
  		android:orientation="horizontal"
  		android:layout_below="@id/white_bar"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
    
	    <Button
			android:layout_width="105dip"
			android:layout_height="32dip"
			android:id="@+id/btnSystemApp"
			android:text="@string/systemapps"
			android:background="@drawable/button_layout_selected"
			android:textSize="14dip"
		></Button>
			 
	    <Button
			android:layout_width="105dip"
			android:layout_height="32dip"
			android:id="@+id/btnUserApp"
			android:text="@string/userapps"
			android:background="@drawable/button_layout_unselected"
			android:textSize="14dip"
		></Button>
			 
	    <Button
			android:layout_width="105dip"
			android:layout_height="32dip"
			android:id="@+id/btnOnline"
			android:text="@string/online"
			android:background="@drawable/button_layout_unselected"
			android:textSize="14dip"
		></Button>
	</LinearLayout>
    
	<View android:id="@+id/blue_bar"
		android:layout_below="@id/buttons"
		android:layout_height="6dip" 
		android:layout_width="fill_parent"
		android:background ="@drawable/bar_layout" /> 
    
    <ViewFlipper
    	android:id="@+id/mainFrame"
    	android:background="@android:color/transparent"
    	android:layout_below="@id/blue_bar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<ListView android:id="@+id/sysapp"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		/>
		
		<ListView android:id="@+id/userapp"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		/>
		
		<RelativeLayout 
  			android:orientation="vertical"
  			android:layout_width="match_parent"
  			android:layout_height="match_parent">
  
  			<RelativeLayout android:id="@+id/webtools"
  				android:background="@drawable/shortcut_bar_layout"
  				android:layout_alignParentBottom="true" 
  				android:orientation="horizontal" 
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content">
  	
			<ImageView android:id="@+id/next"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/next"
				android:layout_alignParentLeft="true"
			/>
			<ImageView android:id="@+id/prev"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:layout_marginLeft="30dip"
				android:scaleType="fitCenter"
				android:src="@drawable/prev"
				android:layout_toRightOf="@id/next"
			/>
			<ImageView android:id="@+id/newpage"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/newpage"
				android:layout_centerHorizontal="true"
			/>
			<ImageView android:id="@+id/home"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/home"
				android:layout_alignParentRight="true"
			/>
			<ImageView android:id="@+id/refresh"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:layout_marginRight="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/refresh"
				android:layout_toLeftOf="@id/home"
			/>
  		</RelativeLayout>
  
  		<RelativeLayout android:id="@+id/webcontrol"
			android:layout_above="@id/webtools"
			android:layout_centerHorizontal="true"
			android:orientation="vertical"
			android:visibility="invisible"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content">
  			
			<TextView android:id="@+id/opennewpage"
				android:text="@string/newpage"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:gravity="center"
				android:textSize="18dip"
				android:background="#88222222"
				android:layout_width="250dip"
				android:layout_height="35dip"/>
				
			<ListView android:id="@+id/weblist"
				android:layout_above="@id/opennewpage"
				android:layout_width="250dip"
				android:layout_height="wrap_content"/>
				
		</RelativeLayout>
		
		<ViewFlipper
			android:id="@+id/webpages"
			android:layout_above="@id/webtools"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
		  
		</RelativeLayout>
		
    </ViewFlipper>
    
</RelativeLayout>
</FrameLayout>
	
