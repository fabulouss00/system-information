<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#F0404040"
  >
  
    <com.google.ads.AdView xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    ads:loadAdOnCreate="true"
    ads:adUnitId="a14e79197567476"
    ads:adSize="BANNER"/>
    
<ScrollView 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
    
<LinearLayout 
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
  
    	<TextView android:id="@+id/title"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:gravity="center_horizontal"
      	android:textSize="16dip"
		android:layout_margin="5dip"
    />
  	
    <TextView android:id="@+id/help"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textSize="16dip"
      	android:textColor="#FFFFFFFF"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:padding="5dip"
		android:background="@drawable/round_corner_light"
    />
  	
  	<Button android:id="@+id/vote"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textSize="16dip"
      	android:text="@string/vote"
		android:layout_margin="5dip"
        android:background="@drawable/button_layout"
    />
  	
  	<TextView android:id="@+id/info"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textSize="16dip"
      	android:textColor="#FFFFFFFF"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:padding="5dip"
		android:background="@drawable/round_corner_light"
    />
  		
  	<Button android:id="@+id/share"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textSize="16dip"
      	android:text="@string/share"
		android:layout_margin="5dip"
        android:background="@drawable/button_layout"
    />
  	
  	<CheckBox android:id="@+id/change_wallpaper"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:text="@string/auto_change_wallpaper"
      	android:layout_marginLeft="15dip"
      	android:checked="false"
      	android:enabled="false"
    />  

<!--
  		<TextView android:id="@+id/fellow"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:layout_gravity="center_horizontal"
      	android:textSize="16dip"
      	android:textColor="#FFFFFFFF"
    />
-->
  	
  	<TextView android:id="@+id/mailto"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:layout_gravity="center_horizontal"
      	android:textSize="16dip"
      	android:textColor="#FFFFFFFF"
    />
    	
</LinearLayout>

</ScrollView>
</LinearLayout>
