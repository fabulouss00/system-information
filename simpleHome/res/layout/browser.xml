<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adsParent"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <com.google.ads.AdView xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"  
    android:id="@+id/adView"        
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    ads:loadAdOnCreate="true"
    ads:adUnitId="a14e79197567476"
    ads:adSize="BANNER"/>
    
    <EditText android:id="@+id/url"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/adView"
    	android:inputType="textWebEmailAddress"
    	android:visibility="invisible"/>
    	
    <TextView android:id="@+id/page_source"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_below="@id/adView"
    	android:background="#F0FFFFFF"
    	android:focusable="true"
    	android:focusableInTouchMode="true"
		android:scrollbars="vertical"
    	android:visibility="invisible"/>
    
    		<RelativeLayout android:id="@+id/webtools"
  				android:background="@drawable/shortcut_bar_layout"
  				android:layout_alignParentBottom="true" 
  				android:orientation="horizontal" 
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content">
  	
			<ImageView android:id="@+id/refresh"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/refresh"
				android:layout_alignParentLeft="true"
			/>
			<ImageView android:id="@+id/share"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/share"
				android:layout_alignParentRight="true"
			/>
			
  			<RelativeLayout android:id="@+id/webtools_center"
  				android:background="@drawable/shortcut_bar_layout"
  				android:orientation="horizontal" 
				android:layout_centerHorizontal="true"
  				android:layout_width="180dip"
  				android:layout_height="wrap_content"
  			>
			<ImageView android:id="@+id/newpage"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/newpage"
				android:layout_centerHorizontal="true"
			/>
			<ImageView android:id="@+id/prev"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/prev"
				android:layout_alignParentLeft="true"
			/>
			<ImageView android:id="@+id/next"
				android:layout_height="35dip" 
				android:layout_width="35dip"
				android:scaleType="fitCenter"
				android:src="@drawable/next"
				android:layout_alignParentRight="true"
			/>
  		</RelativeLayout>
  		</RelativeLayout>
    
  		<RelativeLayout android:id="@+id/webcontrol"
			android:layout_above="@id/webtools"
			android:layout_centerHorizontal="true"
			android:orientation="vertical"
			android:visibility="invisible"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content">
  			
			<TextView android:id="@+id/opennewpage"
				android:text="@string/newpage"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:gravity="center"
				android:textSize="20dip"
				android:background="#EE222222"
				android:textColor="#FF96c732"
				android:textStyle="bold"
				android:layout_width="250dip"
				android:layout_height="35dip"/>
				
			<ListView android:id="@+id/weblist"
				android:background="@drawable/border"
				android:layout_centerHorizontal="true"
				android:layout_above="@id/opennewpage"
				android:layout_width="250dip"
				android:layout_height="wrap_content"/>
				
		</RelativeLayout>
		
		<ViewFlipper
			android:id="@+id/webpages"
			android:layout_above="@id/webtools"
			android:layout_below="@id/adView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
				
</RelativeLayout>