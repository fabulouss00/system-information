<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#110000ff" android:endColor="#220000ff" android:angle="90" />
            <corners android:radius="20dip" />
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
 
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#11ffffff" android:endColor="#22ffffff" android:angle="90" />
            <corners android:radius="20dip" />
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
 
    <item >
        <shape>
            <gradient android:startColor="#0000" android:endColor="#0000" android:angle="90" />
            <corners android:radius="0dip" />
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
            </shape>
    </item>
</selector>
