<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adsParent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:orientation="vertical" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/close_search"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/search_next"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/search_prev"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/search_next"
            android:scaleType="fitCenter"
            android:src="@drawable/prev" />

        <TextView
            android:id="@+id/search_hint"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/search_prev"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dip" />

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="1dip"
            android:layout_toLeftOf="@id/search_hint"
            android:layout_toRightOf="@id/close_search"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:inputType="textUri"
            android:singleLine="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/webtools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

    	<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffc5c5c5" />
        
        <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff5f5f5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:scaleType="center"
            android:background="@drawable/imagebutton_layout"
            android:src="@drawable/refresh" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:scaleType="fitCenter"
            android:background="@drawable/imagebutton_layout"
            android:src="@drawable/prev" />

        <ImageView
            android:id="@+id/newpage"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:scaleType="fitCenter"
            android:background="@drawable/imagebutton_layout"
            android:src="@drawable/newpage" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:scaleType="fitCenter"
            android:background="@drawable/imagebutton_layout"
            android:src="@drawable/next" />
        
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:scaleType="fitCenter"
            android:background="@drawable/imagebutton_layout"
            android:src="@drawable/home" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/urlline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" 
        android:layout_below="@id/adContainer"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/addfavorite"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@drawable/imagebutton_layout"
                android:src="@drawable/favorites_add" />

            <ImageView
                android:id="@+id/go"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:background="@drawable/imagebutton_layout"
                android:src="@drawable/go" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="24dip" >

                <AutoCompleteTextView
                    android:id="@+id/url"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="0dip"
                    android:background="#00000000"
                    android:completionThreshold="1"
                    android:imeOptions="actionGo|flagNoExtractUi"
                    android:inputType="textUri"
                    android:selectAllOnFocus="true"
                    android:singleLine="true" />

                <ProgressBar
                    android:id="@+id/loadprogress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="21dip"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:visibility="invisible" />
            </FrameLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffc5c5c5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff5f5f5" />
        
    </LinearLayout>
        
    <easy.lib.MyViewFlipper
        android:id="@+id/webpages"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/webtools"
        android:layout_below="@id/urlline" />

    <RelativeLayout
        android:id="@+id/up_down"
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="80dip"
        android:background="#00000000"
        android:visibility="invisible"
        >
        
        <ImageView
            android:id="@+id/page_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
	        android:src="@drawable/br_up_icon"
            />
        
        <ImageView
            android:id="@+id/page_drag"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:background="#00111111"
            />
        
        <ImageView
            android:id="@+id/page_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
	        android:src="@drawable/br_down_icon"
            />
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/webcontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/panel_background"
        android:layout_above="@id/webtools"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:visibility="invisible" >

        <ListView
            android:id="@+id/weblist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        
        <Button
            android:id="@+id/opennewpage"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/button_layout"
            android:gravity="center"
            android:text="@string/newpage"
            android:textColor="#FF333333"
            android:textSize="20dip"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>