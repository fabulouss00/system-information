<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="horizontal" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:paddingLeft="5dip"
	android:paddingRight="5dip">
	
    <TextView android:id="@+id/appversion"
	    android:layout_height="wrap_content"
	    android:layout_width="70dip"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:gravity="center"
	    android:lines="2"
        android:textSize="12dip" 
        android:padding="3dip"
        android:background="@drawable/button_layout_unselected"
        android:focusable="true"
        android:focusableInTouchMode="true"
	    android:textColor="#FFDDDDDD"/>
    
    <LinearLayout android:id="@+id/app" 
    	android:orientation="vertical"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/appversion"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="5dip"
        android:padding="4dip">
    
        <TextView android:id="@+id/appname" 
            android:layout_height="wrap_content" 
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:textSize="18dip" 
	        android:textColor="#FFFFFFFF"/>
	
<LinearLayout  
	android:orientation="horizontal" 
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
	<ImageView android:id="@+id/appicon"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="16dip" 
        android:layout_width="16dip"
	    android:gravity="center"
	    android:scaleType="centerCrop"
	    android:layout_marginRight="5dip"
        />
    
    <TextView android:id="@+id/appsource" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="14dip" 
            android:textColor="#FF666666"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>