<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#80ffffff" android:endColor="#80ffffff" android:angle="90" />
            <corners android:radius="0dip" />
            <padding android:left="-10dip" android:top="-10dip"
                android:right="-5dip" android:bottom="-5dip" />
        </shape>
    </item>
 
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#80ffffff" android:endColor="#80ffffff" android:angle="90" />
            <corners android:radius="0dip" />
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
 
    <item >
        <shape>
            <gradient android:startColor="#10ffffff" android:endColor="#10ffffff" android:angle="90" />
            <corners android:radius="0dip" />
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
            </shape>
    </item>
</selector>
